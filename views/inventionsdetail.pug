extends layout

block content
    h1 Invention Detail

    if (toShow == null)
        h2 No instance found
    else
        - let inventionid = toShow._id
        - let name = toShow.name
        - let inventionsinventor = toShow.inventor
        - let inventionsyear = toShow.year

        div(class="mb-3")
            div.row.mb-2
                div(class='inventionAttr mr-3 font-weight-bold') Invention ID:
                div #{inventionid}
            div.row.mb-2
                div(class='inventionAttr mr-3 font-weight-bold') Invention Name:
                div #{name}
            div.row.mb-2
                div(class='inventionAttr mr-3 font-weight-bold') Invention Year:
                div #{inventionsyear}
            div.row.mb-2
                div(class='inventionAttr mr-3 font-weight-bold') Invention Inventor:
                div #{inventionsinventor}

        button(class="btn btn-secondary mt-3" onclick="goBack()") Go Back

    script.
        function goBack() {
            window.location.href = "/inventions";
        }
