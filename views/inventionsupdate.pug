extends layout

block content
    h1= title

    - let inventionid = toShow._id
    - let name = toShow.name
    - let inventionsinventor = toShow.inventor
    - let inventionsyear = toShow.year

    div.row(class='mb-2')
        div.mr-1 ID is
        div #{inventionid}
    - let actionid = "/resource/inventions/" + inventionid
    form(id='inventionsForm', action= actionid, method="PUT")
        div.form-group
            label.inventionAttr(for='name') inventions type
            input#name(type='text', name='name', value= name )
        div.form-group
            label.inventionAttr(for='year') inventions year
            input#year(type='text', name='year', value= inventionsyear )
        div.form-group
            label.inventionAttr(for='inventor') inventions inventor
            input#inventor(type='text', name='inventor', value= inventionsinventor )
        input(type="submit")

    script.
        document.forms['inventionsForm'].addEventListener('submit', (event) => {
            event.preventDefault();
            fetch(event.target.action, {
                method: 'PUT',
                body: new URLSearchParams(new FormData(event.target)) // event.target is the form
            })
            .then((resp) => {
                return resp.json(); // or resp.text() or whatever the server sends
            })
            .then((body) => {
                alert("Update succeeded");
                // TODO handle body
            })
            .catch((error) => {
                // TODO handle error
                alert("Update failed " + error);
            });
        });
