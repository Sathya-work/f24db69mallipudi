extends layout

block content
  h1 Search Results - Inventions

  .container-fluid
    .row
      each item in results
        div.col-sm-2(onclick=`buy(${item._id})`) 
          h3 #{item.name}
          p Year: #{item.year}
          p Inventor: #{item.inventor}
  
  a(href='/') Back to Home

  script.
    function buy(index) {
      alert(`You purchased item ${index}`);
    }
